{
  "name": "pulse-flow",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --testPathIgnorePatterns=\"dist/\"",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:mongodb": "jest src/tests/mongodb.test.ts --forceExit",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "verify:mongodb": "ts-node src/scripts/verify-mongodb.ts",
    "verify:deployment": "ts-node src/scripts/verify-deployment.ts",
    "verify:grafana": "ts-node src/scripts/verify-grafana.ts",
    "verify:rabbitmq:local": "cross-env NODE_ENV=development ts-node src/scripts/verify-rabbitmq.ts",
    "verify:rabbitmq": "cross-env NODE_ENV=production ts-node src/scripts/verify-rabbitmq.ts",
    "prepare": "husky",
    "start:heartbeat": "node dist/scripts/heartbeat.js",
    "test:factory": "jest src/tests/factories/tweet.factory.test.ts",
    "test:service": "jest src/tests/services/tweet.service.test.ts",
    "test:continuous": "jest src/tests/scripts/continuous-insert.test.ts",
    "test:coverage": "npm run test:setup && cross-env NODE_ENV=test jest --coverage && npm run test:teardown",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "test:integration": "cross-env NODE_ENV=test jest \"src/tests/integration/.*\\.test\\.ts$\" --testPathIgnorePatterns=\"dist/\"",
    "test:e2e": "cross-env NODE_ENV=test jest --config jest.e2e.config.js",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --testPathIgnorePatterns=\"/integration/|/e2e/|dist/\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@opentelemetry/otlp-transformer": "^0.57.1",
    "@types/axios": "^0.14.0",
    "@types/chance": "^1.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.12.0",
    "@types/snappy": "^6.0.0",
    "amqplib": "^0.10.5",
    "axios": "^1.6.2",
    "chance": "^1.1.11",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.0.0",
    "mongodb": "^6.13.0",
    "mongoose": "^8.9.5",
    "prom-client": "^14.2.0",
    "protobufjs": "^7.4.0",
    "snappy": "^7.2.2",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.6",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "mongodb-memory-server": "^10.1.3",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5"
  }
}
